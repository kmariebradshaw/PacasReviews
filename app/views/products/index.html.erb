<section class="accent-padding background-green page-header">
	<h1 class="tac">Edit Products</h1>
</section>
<section class="main">
	<%= link_to 'Add Product', new_product_path %>
<% @products.each do | product | %>
	<p><%= product.title %>:</p> <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Delete', product_path(product),
              method: :delete,
              data: { confirm: 'This will delete all associated reviews, are you sure?' } %></td> 
              <% if product.status == "approved" %> |
				  <%= form_for(product, remote: true) do |fa| %>
			          <%= fa.hidden_field :status, :value => "archived" %>
			      	  <%= fa.submit "Archive", class: "product-status" %>
			      	<% end %>

    		 <% else %>
	  			<%= form_for(product, remote: true) do |fa| %>
			          <%= fa.hidden_field :status, :value => "approved" %>
			      	  <%= fa.submit "Approve", class: "product-status" %>
			      	<% end %>    		 
			      	<% end %>
<% end %> 
</section>
