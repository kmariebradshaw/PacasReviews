<section class="review-slick" style="">
  <% @reviews.each do | review | %> 
      <div class="tac background-natural review-slick-slide" style="">
        <%= image_tag("5Stars-Teal.svg", class: "m8-review-stars") %>

          <p><%= truncate(review.text, length:190) %></p>
          <p class="subscript nmb">- <%= review.author_first %> <%= review.author_last.first(1) %>.</p>
        </div>
  <% end %>
</section>

<%= image_tag("left-arrow-dark-teal.png", class: "m8-arrow prev-arrow") %>
<%= image_tag("right-arrow-dark-teal.png", class: "m8-arrow next-arrow") %>

<style>
  .background-white { background-color: white; }
  .text-new-teal { color: #1F404A }
  .clickable { cursor: pointer; }
  .review-slick { padding: 2vw 7vw; }
  .review-slick-slide { 
    margin: 1vw; 
    border-radius: 20px;
    padding: 1vw 2vw 2vw;
    min-height: 20.33vw;
    display: flex !important;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  .subscript {font-weight: 300}
  .m8-arrow { 
    cursor: pointer; 
    position: absolute;
    margin-top: -18vw;
    width: 4vw;
  }
  .m8-arrow.prev-arrow {
    left: 0;
  }
  .m8-arrow.next-arrow {
    right: 0;
  }
  .m8-review-stars {
    width: 10vw;
    margin-top: 1vw;
}
<%#   .review-slick-slide.slick-active[data-slick-index="0"], .review-slick-slide.slick-active[data-slick-index="2"] {
    margin-top: 2.3vw;
  }
  .review-slick-slide.slick-active[data-slick-index="1"] { height: 23vw !important; } %>
</style>
<script>

  $('.review-slick').slick({
  infinite: true,
  slidesToShow: 3,
  sldiesToScroll: 3,
  adaptiveHeight: true, 
     prevArrow: $('.prev-arrow'),
    nextArrow: $('.next-arrow'),
    responsive: [{
    breakpoint: 799,
    settings: {
      slidesToShow: 1,
      slidesToScroll: 1,
    }
  }]
});
    
</script>
